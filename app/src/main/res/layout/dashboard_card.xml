<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/dashboard_card_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/speaker" />

    <TextView
        android:id="@+id/dashboard_card_description"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_alignBottom="@+id/dashboard_card_image"
        android:layout_alignTop="@+id/dashboard_card_image"
        android:layout_toRightOf="@+id/dashboard_card_image"
        android:layout_toLeftOf="@+id/dashboard_card_actions"
        android:text="@string/ipsum_1_paragraph" />

    <LinearLayout
        android:id="@+id/dashboard_card_actions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentRight="true"
        android:orientation="vertical">
        </LinearLayout>

</RelativeLayout>